<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xmlns="http://maven.apache.org/POM/4.0.0"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>io.intino.magritte</groupId>
	<artifactId>builder-constants</artifactId>
	<version>3.0.0</version>

	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<outputDirectory>../../out/production/builder-constants</outputDirectory>
		<testOutputDirectory>../../out/test/builder-constants</testOutputDirectory>
		<directory>../../out/build/builder-constants</directory>
		<sourceDirectory>src</sourceDirectory>

	</build>

	<distributionManagement>
		<repository>
			<id>intino-maven</id>
			<url>https://artifactory.intino.io/artifactory/release-builders</url>
		</repository>
	</distributionManagement>
</project>